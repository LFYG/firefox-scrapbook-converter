<?xml version="1.0" ?>
<?xml-stylesheet href="chrome://global/skin/" type="text/css" ?>

<!--locale-->
<!DOCTYPE dialog [
    <!ENTITY % mainDTD SYSTEM "chrome://sbconv/locale/conv.dtd">
    %mainDTD;
    <!ENTITY % prefDTD SYSTEM "chrome://sbconv/locale/prefsDialog.dtd">
    %prefDTD;
]>

<dialog id="sbconvConverterWindow"
        xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
        windowtype="scrapbook"
        title="&action.sb2zip;"
        width="500"
        height="400"
        ondialogaccept="convert('sb2zip');">

    <!--JavaScript-->
    <script type="application/x-javascript" src="chrome://sbconv/content/conv.js" />

    <!-- Options -->
    <hbox>
        <label>&input;</label>
        <textbox id="inputPath" flex="1" persist="value" onchange="this.setAttribute('value', this.value);"/>
        <button id="inputPick" class="dialog" label="&pick;" oncommand="return onInputBrowse();"/>
    </hbox>
    <hbox>
        <label>&output;</label>
        <textbox id="outputPath" flex="1" persist="value" onchange="this.setAttribute('value', this.value);" />
        <button id="outputPick" class="dialog" label="&pick;" oncommand="return onOutputBrowse();"/>
    </hbox>
    <hbox align="center">
        <label value="&sb2zip.topDirName;:" />
        <menulist id="sb2zip_topDirName" value="dir" persist="value" onchange="this.setAttribute('value', this.value); document.persist(this, 'value');">
            <menupopup>
                <menuitem value="none" label="&sb2zip.topDirName.none;" />
                <menuitem value="id" label="&sb2zip.topDirName.id;" />
                <menuitem value="dir" label="&sb2zip.topDirName.dir;" />
            </menupopup>
        </menulist>
    </hbox>
    <checkbox id="mergeOutput" label="&mergeOutput;" persist="checked" checked="true" oncommand="if (!this.checked) this.setAttribute('checked', 'false');" />
</dialog>
